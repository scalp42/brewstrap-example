[user]
  name = <%= node[:user][:full_name] %>
  email = <%= node[:user][:email] %>

[color]
  diff = auto
  status = auto
  branch = auto

[color "branch"]
  current = yellow reverse
  local = yellow 
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[alias]
  st = status
  di = diff
  co = checkout
  ci = commit
  br = branch
  sta = stash

[core]
  excludesfile = /Users/<%= node[:user][:username] %>/.gitignoreglobal
  legacyheaders = false
  editor = vim

[github]
  user = <%= node[:github][:username] %>
  repo = <%= node[:github][:username] %>.github.com
