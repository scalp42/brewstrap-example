#!/usr/bin/env expect --
spawn hdiutil attach "[lindex $argv 0]" -mountpoint "[lindex $argv 1]" -private -nobrowse -noautoopen -noautofsck -noverify -readonly

expect {
	"License Agreement" {
		exp_send "q"
		exp_continue
	}
	"Agree Y/N?" {
		exp_send "y\r"
		exp_continue
	}
	"/dev/" {
		interact
	}
}
